{
  "name": "Austen",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "latest"
    }
  },
  "postCreateCommand": "[ -f /workspaces/.codespaces/shared/first-run-notice.txt ] && (sudo echo 'Welcome to the GitHub Copilot Codespace ðŸ¤¯' > /workspaces/.codespaces/shared/first-run-notice.txt) || echo 'Welcome back to the GitHub Copilot Devcontainer ðŸ¤¯'",
  "customizations": {
    "vscode": {
      "settings": {
        "github.copilot.advanced": {
          "debug.conversation": true
        },
        "git.confirmSync": false,
        "git.autofetch": true,
        "workbench.colorTheme": "GitHub Dark Default"
